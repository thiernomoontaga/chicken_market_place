<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Current price:</strong>
    <%= product.current_price %>
  </p>

  <p>
    <strong>Disponibility:</strong>
    <%= product.disponibility %>
  </p>

  <p>
    <strong>Evaluation:</strong>
    <%= product.evaluation %>
  </p>

  <p>
    <strong>Race:</strong>
    <%= product.race_id %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= product.category_id %>
  </p>

</div>
